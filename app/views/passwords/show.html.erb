<%= link_to "← Back", root_path, class: "block mb-4 no-undeline text-xs text-blue-700" %>
<div class="mb-4 flex justify-between items-center">
  <h1 class="mb-0">
    <%= @password.url%>
      <%= link_to @password.url, target: :_blank do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="inline-block text-blue-500 w-6 h-6">
        <path strokeLinecap="round" strokeLinejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
      </svg>
    <% end %>
  </h1>
  <%= link_to "edit", edit_password_path %>
</div>

<h3>Credentails</h3>
<h6 class="text-sm mb-1">Username / Email</h6>
<div class="flex item-center gap-1">
  <pre class="mt-0 flex-grow"><code><%= @password.username %></code></pre>
  <%= button_tag "Copy", class: "px-5 mb-5 py-2 bg-gray-200 rounded", data: { controller: "clipboard", action: "click->clipboard#copy", clipboard_content_value: @password.username}%>
</div>
<h6 class="text-sm mb-1">Password</h6>
<div class="flex item-center gap-1">
  <pre class="mt-0 flex-grow"><code><%= @password.password %></code></pre>
  <%= button_tag "Copy", class: "px-5 mb-5 py-2 bg-gray-200 rounded", data: { controller: "clipboard", action: "click->clipboard#copy", clipboard_content_value: @password.password}%>
</div>

<h4>Share</h4>

<div class="flex flex-col gap-1 divide-y divide-gray-100">
  <%= link_to "Add a user", new_password_share_path(@password) %>

  <% @password.users.excluding(current_user).each do |user| %>
  <div class="flex justify-between items-center">
    <div><%= user.email %></div>
    <%= button_to "remove", password_share_path(@password, user), method: :delete, data: {turbo_confirm: "Are you sure"} %>
  </div>
  <% end %>
</div>